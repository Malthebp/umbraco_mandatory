@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "Master.cshtml";
    var projectsPage = Model.Content.Site().FirstChild("projectMain");
}
<header class="bg-gradient" id="home">
    <div class="container mt-5">
        <h1>@Model.Content.GetPropertyValue("headerTitle")</h1>
        <p class="tagline">The one and only solution for any kind of mobila app landing needs. Just change the screenshots and texts and you are good to go. </p>
    </div>
</header>

<div class="container">
    <div class="page-section">
        <h2>Some of my projects</h2>
        @Umbraco.RenderMacro("NewestCompletedProjects", new {count = "3"})
        <div class="d-flex justify-content-end mt-4">
            <a href="@projectsPage.Url" class="btn btn-secondary">View more</a>
        </div>
    </div>
</div>
