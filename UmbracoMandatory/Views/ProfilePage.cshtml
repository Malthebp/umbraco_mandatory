@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var member = Members.GetCurrentMemberProfileModel();
}

@* the fun starts here *@

<header class="bg-gradient--blue"></header>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            @Html.Partial("_profilePageSideNav")
        </div>
        <div class="col-md-8">
            @using (Html.BeginUmbracoForm("HandleUpdateMember", "MemberSurface", FormMethod.Post))
            {
                <div class="form-group row d-flex align-items-center text-right">
                    @Html.LabelFor(x => member.Name, new { @class = "col-md-3 mb-0" })
                    @Html.TextBoxFor(x => member.Name, new { @class = "col-md-9 form-control" })
                </div>
                <div class="form-group row d-flex align-items-center text-right">
                    @Html.LabelFor(x => member.Email, new { @class = "col-md-3 mb-0" })
                    @Html.TextBoxFor(x => member.Email, new { @class = "col-md-9 form-control", @readonly = "readonly" })
                </div>
                <div class="form-group row d-flex align-items-center text-right">
                    @Html.LabelFor(x => member.MemberTypeAlias, new { @class = "col-md-3 mb-0" })
                    @Html.TextBoxFor(x => member.MemberTypeAlias, new { @class = "col-md-9 form-control", @readonly= "readonly" })
                </div>

                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary right">Save</button>
                </div>
            }
        </div>
    </div>
</div>
